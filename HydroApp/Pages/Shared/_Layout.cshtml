<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta name="hydro-config" />
	<script defer src="~/hydro/hydro.js" asp-append-version="true"></script>
	<script defer src="~/hydro/alpine.js" asp-append-version="true"></script>
	<title>@ViewData["Title"] - SpayWise</title>
	<script type="importmap"></script>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/bootstrap-icons.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/HydroApp.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<!-- Level 1 Navigation: Main sections as tabs -->
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom">
			<div class="container">
				<a class="navbar-brand" asp-area="" asp-page="/Index">
					<i class="bi bi-heart-pulse me-2"></i>SpayWise
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1 justify-content-center">
						<nav-item href="/Appointments/Index" text="Appointments" icon="bi-calendar-check" />
						<nav-item href="/Medical/Index" text="Medical" icon="bi-bandaid" />
						<nav-item href="/Calendar/Index" text="Calendar" icon="bi-calendar-event" />
						<nav-item href="/Clients/Index" text="Clients" icon="bi-people" />
						<nav-item href="/Invoice/Index" text="Invoice" icon="bi-receipt" />
						<nav-item href="/Reports/Index" text="Reports" icon="bi-bar-chart" />
						<nav-item href="/Setup/Index" text="Setup" icon="bi-gear" />						
						<nav-item href="/Help/Index" text="Help" icon="bi-question-circle" />
					</ul>
					<partial name="_LoginPartial" />
				</div>
			</div>
		</nav>

		@{
			var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
		}

		<!-- Level 2 Navigation: Sub-sections based on current main section -->
		@if (currentPage?.StartsWith("/Appointments") == true)
		{
			<nav class="bg-light border-bottom">
				<div class="container">
					<ul class="nav nav-tabs border-0 justify-content-center bg-light">
						<nav-item href="/Appointments/Intake" icon="bi-box-arrow-in-right" text="Intake" match-type="FullPath" />
						<nav-item href="/Appointments/Outtake" icon="bi-box-arrow-left" text="Outtake" match-type="FullPath" />
						<nav-item href="/Appointments/Requested" icon="bi-clock-history" text="Requested" match-type="FullPath" />
						<nav-item href="/Appointments/All" icon="bi-list" text="All" match-type="FullPath" />
						<nav-item href="/Appointments/Create" icon="bi-plus-circle" text="Create" match-type="FullPath" />
						<nav-item href="/Appointments/Online" icon="bi-plus-circle" text="Online" match-type="FullPath" />
					</ul>
				</div>
			</nav>
		}
		else if (currentPage?.StartsWith("/Calendar") == true)
		{
			<nav class="bg-light border-bottom">
				<div class="container">
					<ul class="nav nav-tabs border-0 justify-content-center bg-light">
						<nav-item href="/Calendar/SpayNeuter" icon="bi-scissors" text="Spay/Neuter" match-type="FullPath" />
						<nav-item href="/Calendar/Wellness" icon="bi-heart" text="Wellness" match-type="FullPath" />
					</ul>
				</div>
			</nav>
		}
		else if (currentPage?.StartsWith("/Clients") == true)
		{
		   <nav class="bg-light border-bottom">
			   <div class="container">
					<ul class="nav nav-tabs border-0 justify-content-center bg-light">
						<nav-item href="/Clients/Volume" icon="bi-hourglass-split" text="Volume" match-type="FullPath" />
						<nav-item href="/Clients/Owners" icon="bi-hourglass-split" text="Owners" match-type="FullPath" />
					</ul>
			   </div>
		   </nav>
		}
		else if (currentPage?.StartsWith("/Invoice") == true)
		{
			<nav class="bg-light border-bottom">
				<div class="container">
					<ul class="nav nav-tabs border-0 justify-content-center bg-light">
						<nav-item href="/Invoice/Pending" icon="bi-hourglass-split" text="Pending" match-type="FullPath" />
						<nav-item href="/Invoice/AddCharges" icon="bi-plus-square" text="Add Charges" match-type="FullPath" />
						<nav-item href="/Invoice/Receivable" icon="bi-currency-dollar" text="Receivable" match-type="FullPath" />
					</ul>
				</div>
			</nav>
		}
		else if (currentPage?.StartsWith("/Setup") == true)
		{
			<nav class="bg-light border-bottom">
				<div class="container">
					<ul class="nav nav-tabs border-0 justify-content-center bg-light">
						<nav-item href="/Setup/Clinic/Index" icon="bi-building" text="Clinic" match-type="FullPath" />
						<nav-item href="/Setup/Capacity/Index" icon="bi-speedometer2" text="Capacity" match-type="FullPath" />
						<nav-item href="/Setup/Services/Index" icon="bi-tools" text="Services" match-type="FullPath" />
					</ul>
				</div>
			</nav>
		}
		else if (currentPage?.StartsWith("/Help") == true)
		{
			<nav class="bg-light border-bottom">
				<div class="container">
					<ul class="nav nav-tabs border-0 justify-content-center bg-light">
						<nav-item href="/Help/Learn" icon="bi-journal-text" text="Learn" match-type="FullPath" />
						<nav-item href="/Help/Changelog" icon="bi-journal-text" text="Changelog" match-type="FullPath" />
						<nav-item href="/Help/Forum" icon="bi-chat-dots" text="Forum" match-type="FullPath" />
					</ul>
				</div>
			</nav>
		}
	</header>
	<div class="container mt-3">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2025 - HydroApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>  

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
