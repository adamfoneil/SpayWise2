@page
@model HydroApp.Pages.Setup.Clinic.IndexModel
@{
    ViewData["Title"] = "Clinic Setup";
    Layout = "_Layout";
}

<h2>Clinic Setup</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Clinic Configuration</h5>
        <p class="card-text">Configure clinic-specific settings including users, veterinarians, and operational parameters.</p>
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            Select a category from the sidebar to configure specific clinic settings.
        </div>
    </div>
</div>